import plotly.express as px
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from scipy import stats
import numpy as np
df = px.data.iris()
attribute = 'sepal_length'
print("First five records of the selected attribute:")
print(df[[attribute]].head())
plt.figure(figsize=(10, 6))
sns.histplot(df[attribute], kde=True)
plt.title(f'Histogram and KDE of {attribute}')
plt.xlabel(attribute)
plt.ylabel('Frequency')
plt.show()
plt.figure(figsize=(10, 6))
stats.probplot(df[attribute], dist="norm", plot=plt)
plt.title(f'Probability Plot of {attribute}')
plt.show()
skewness = df[attribute].skew()
print(f'Skewness for {attribute} = {skewness}')
kurtosis = df[attribute].kurtosis()
print(f'Kurtosis for {attribute} = {kurtosis}')


